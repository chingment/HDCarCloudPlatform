@model WebBack.Models.Biz.Insurance.DetailsViewModel
@{
    ViewBag.Title = "Dealt";
    Layout = "~/Views/Shared/_LayoutHomeDialog.cshtml";
}

<form id="form1" name="form1">
    @AntiForgery.GetHtml()
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>商户信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb1-detail">
        <tr>
            <td class="t" style="width:80px">商户代码：</td>
            <td class="c">
                <span>@Model.Merchant.ClientCode</span>
            </td>
            <td class="t" style="width:80px">商户名：</td>
            <td class="c">
                <span>@Model.Merchant.YYZZ_Name</span>
            </td>
        </tr>
        <tr>
            <td class="t">联系人：</td>
            <td class="c">
                <span>@Model.Merchant.ContactName</span>
            </td>
            <td class="t">联系电话：</td>
            <td class="c">
                <span>@Model.Merchant.ContactPhoneNumber</span>
            </td>
        </tr>
        <tr>
            <td class="t">地区：</td>
            <td class="c">
                <span>@Model.Merchant.Area</span>
            </td>
            <td class="t">联系地址：</td>
            <td class="c">
                <span>@Model.Merchant.ContactAddress</span>
            </td>
        </tr>
    </table>

    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>需求信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb1-detail">
        <tr>
            <td class="t" style="width:80px">保险公司：</td>
            <td class="c">
                <span>@Model.OrderToInsurance.InsCompanyName</span>
            </td>
        </tr>
        <tr>
            <td class="t">保险方案：</td>
            <td class="c">@Model.OrderToInsurance.ProductSkuName</td>
        </tr>
        @foreach (var item in Model.ProductSkuAttrItems)
        {
            <tr>
                <td class="t" style="width:80px">@item.field ：</td>
                <td class="c">
                    <span>@item.value</span>
                </td>
            </tr>
        }
        <tr>
            <td class="t" style="vertical-align:top">
                身份证：
            </td>
            <td class="f-tb-c">
                <table class="f-tb1-detail" id="list_GoodsPic" style="text-align:center;width:auto">
                    <tr style="vertical-align:top">
                        @for (var i = 0; i < Model.CredentialsImgs.Count; i++)
            {
                            <td>
                                <div>
                                    <span class="uploadimgbox" upload="true">
                                        <span class="uploadimg" inputname="Model.DispalyImgs[@i].ImgUrl" path="product">
                                            <img src="@(string.IsNullOrEmpty(Model.CredentialsImgs[i].ImgUrl)==true?"/Static/default1.jpg":Model.CredentialsImgs[i].ImgUrl)" />
                                        </span>
                                        <span class="uploadimg-view" style="">预览</span>
                                    </span>
                                </div>
                            </td>
                        }
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    @Html.Partial("AuditFlowTrace", Model.BizProcessesAuditDetails)
</form>