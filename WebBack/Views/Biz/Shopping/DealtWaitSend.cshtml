@model WebBack.Models.Biz.Shopping.DealtWaitSendViewModel
@{
    ViewBag.Title = "Dealt";
    Layout = "~/Views/Shared/_LayoutHomeDialog.cshtml";
}
@section scripts{

    <script type="text/javascript">

        var listTable;

        $(document).ready(function () {

            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { art.dialog.tips(msg); } });

            $("#Model_OrderToShopping_ExpressCompany").formValidator({ onShow: "", onFocus: "", onCorrect: "", onEmpty: "" }).inputValidator({ min: 1, max: 500, onError: "请输入快递公司" });
            $("#Model_OrderToShopping_ExpressOrderNo").formValidator({ onShow: "", onFocus: "", onCorrect: "", onEmpty: "" }).inputValidator({ min: 1, max: 500, onError: "请输入快递单号" });

        });



        function submit(operate, fun) {
            var form = $("#form1");
            var isValid = $.formValidator.pageIsValid();
            if (isValid) {
                art.dialog.confirm("确定已发货", function () {
                    var l_Data = $("#form1").serializeArray();
                    l_Data.push({ name: "Model.Operate", value: operate });
                    $.lumos.postJson({
                        isUseHandling: true,
                        url: "/Biz/Shopping/DealtWaitSend",
                        data: l_Data,
                        success: function (data) {
                            fun(data);
                        }
                    });
                });
            }
            return false;

        }

    </script>
}

<form id="form1" name="form1">
    @AntiForgery.GetHtml()
    <input name="Model.OrderToShopping.Id" type="hidden" value="@Model.OrderToShopping.Id" />


    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>商户信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb1-detail">
        <tr>
            <td class="t" style="width:80px">商户代码：</td>
            <td class="c">
                <span>@Model.Merchant.ClientCode</span>
            </td>
            <td class="t" style="width:80px">商户名：</td>
            <td class="c">
                <span>@Model.Merchant.YYZZ_Name</span>
            </td>
        </tr>
        <tr>
            <td class="t">联系人：</td>
            <td class="c">
                <span>@Model.Merchant.ContactName</span>
            </td>
            <td class="t">联系电话：</td>
            <td class="c">
                <span>@Model.Merchant.ContactPhoneNumber</span>
            </td>
        </tr>
        <tr>
            <td class="t">地区：</td>
            <td class="c">
                <span>@Model.Merchant.Area</span>
            </td>
            <td class="t">联系地址</td>
            <td class="c">
                <span>@Model.Merchant.ContactAddress</span>
            </td>
        </tr>
    </table>
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>快递信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>

    <table class="f-tb1-detail">
        <tr>
            <td class="t"><span class="required-symbol">*</span>快递公司：</td>
            <td class="c">
                <span><input type="text" class="input-control" name="Model.OrderToShopping.ExpressCompany" id="Model_OrderToShopping_ExpressCompany" style="width:150px;" /></span>
            </td>
            <td class="t"><span class="required-symbol">*</span>快递单号：</td>
            <td class="c">
                <span><input type="text" class="input-control" name="Model.OrderToShopping.ExpressOrderNo" id="Model_OrderToShopping_ExpressOrderNo" style="width:150px;" /></span>
            </td>
        </tr>

    </table>

    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>订单信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>

    <table id="list_table_offerkinds" class="list-tb" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th style="width:25%">
                    商品名称
                </th>
                <th style="width:25%">
                    数量
                </th>
                <th style="width:25%">
                    单价
                </th>
                <th style="width:25%">
                    小计
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var m in Model.OrderToShoppingGoodsDetails)
            {
                <tr>
                    <td>@m.ProductSkuName</td>
                    <td>@m.Quantity</td>
                    <td>@m.UnitPrice.ToF2Price()</td>
                    <td>@m.SumPrice.ToF2Price()</td>
                </tr>
            }



        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>@Model.OrderToShopping.Price.ToF2Price()</td>
            </tr>
        </tfoot>
    </table>


</form>