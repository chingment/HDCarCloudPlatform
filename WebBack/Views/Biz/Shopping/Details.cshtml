@model WebBack.Models.Biz.Shopping.DetailsViewModel
@{
    ViewBag.Title = "Dealt";
    Layout = "~/Views/Shared/_LayoutHomeDialog.cshtml";
}
@section scripts{

    <script type="text/javascript">

    
    </script>
}

<form id="form1" name="form1">
    @AntiForgery.GetHtml()


    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>商户信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb1-detail">
        <tr>
            <td class="t" style="width:80px">商户代码：</td>
            <td class="c">
                <span>@Model.Merchant.ClientCode</span>
            </td>
            <td class="t" style="width:80px">商户名：</td>
            <td class="c">
                <span>@Model.Merchant.YYZZ_Name</span>
            </td>
        </tr>
        <tr>
            <td class="t">联系人：</td>
            <td class="c">
                <span>@Model.Merchant.ContactName</span>
            </td>
            <td class="t">联系电话：</td>
            <td class="c">
                <span>@Model.Merchant.ContactPhoneNumber</span>
            </td>
        </tr>
        <tr>
            <td class="t">地区：</td>
            <td class="c">
                <span>@Model.Merchant.Area</span>
            </td>
            <td class="t">联系地址</td>
            <td class="c">
                <span>@Model.Merchant.ContactAddress</span>
            </td>
        </tr>
    </table>
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>快递信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>

    <table class="f-tb1-detail">
        <tr>
            <td class="t">快递公司：</td>
            <td class="c">
                <span>@Model.OrderToShopping.ExpressCompany</span>
            </td>
            <td class="t">快递单号：</td>
            <td class="c">
                <span>@Model.OrderToShopping.ExpressOrderNo</span>
            </td>
        </tr>

    </table>

    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>订单信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>

    <table id="list_table_offerkinds" class="list-tb" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th style="width:25%">
                    商品名称
                </th>
                <th style="width:25%">
                    数量
                </th>
                <th style="width:25%">
                    单价
                </th>
                <th style="width:25%">
                    小计
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var m in Model.OrderToShoppingGoodsDetails)
            {
                <tr>
                    <td>@m.ProductSkuName</td>
                    <td>@m.Quantity</td>
                    <td>@m.UnitPrice.ToF2Price()</td>
                    <td>@m.SumPrice.ToF2Price()</td>
                </tr>
            }



        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>@Model.OrderToShopping.Price.ToF2Price()</td>
            </tr>
        </tfoot>
    </table>


</form>