@model WebBack.Models.Biz.Lllegal.DetailsByDealtViewModel
@{
    ViewBag.Title = "Dealt";
    Layout = "~/Views/Shared/_LayoutHomeDialog.cshtml";
}
@section styles{
    <style type="text/css">
        .f-tb1-detail .t {
            width: 120px;
        }

        .f-tb1-detail .c {
            width: 280px;
        }
    </style>

}


<form id="form1" name="form1">
    @AntiForgery.GetHtml()
    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>商户信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>
    <table class="f-tb1-detail">
        <tr>
            <td class="t" style="width:80px">商户代码：</td>
            <td class="c">
                <span>@Model.Merchant.ClientCode</span>
            </td>
            <td class="t" style="width:80px">商户名：</td>
            <td class="c">
                <span>@Model.Merchant.YYZZ_Name</span>
            </td>
        </tr>
        <tr>
            <td class="t">联系人：</td>
            <td class="c">
                <span>@Model.Merchant.ContactName</span>
            </td>
            <td class="t">联系电话：</td>
            <td class="c">
                <span>@Model.Merchant.ContactPhoneNumber</span>
            </td>
        </tr>
        <tr>
            <td class="t">地区：</td>
            <td class="c">
                <span>@Model.Merchant.Area</span>
            </td>
            <td class="t">联系地址</td>
            <td class="c">
                <span>@Model.Merchant.ContactAddress</span>
            </td>
        </tr>
    </table>

    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>违章信息</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>

    <table class="f-tb1-detail">
        <tr>
            <td class="t" style="width:80px">车牌号码：</td>
            <td class="c">
                <span>@Model.OrderToLllegalDealt.CarNo</span>
            </td>
            <td class="t" style="width:80px">违章：</td>
            <td class="c">
                <span>@Model.OrderToLllegalDealt.SumCount</span>
            </td>
        </tr>
        <tr>
            <td class="t">扣分：</td>
            <td class="c">
                <span>@Model.OrderToLllegalDealt.SumPoint</span>
            </td>
            <td class="t">罚款：</td>
            <td class="c">
                <span>@Model.OrderToLllegalDealt.SumFine</span>
            </td>
        </tr>
        <tr>
            <td class="t">滞纳金：</td>
            <td class="c">
                <span>@Model.OrderToLllegalDealt.SumLateFees</span>
            </td>
            <td class="t">服务费：</td>
            <td class="c">
                <span>@Model.OrderToLllegalDealt.SumServiceFees</span>
            </td>
        </tr>
        <tr>
            <td class="t">总额：</td>
            <td class="c" colspan="3">
                <span>@Model.OrderToLllegalDealt.Price</span>
            </td>
        </tr>
    </table>

    <table id="list_table_offerkinds" class="list-tb" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th style="width:10%">
                    违章记录号
                </th>
                <th style="width:10%">
                    城市
                </th>
                <th style="width:10%">
                    地点
                </th>
                <th style="width:10%">
                    时间
                </th>
                <th style="width:10%">
                    扣分
                </th>
                <th style="width:10%">
                    扣费
                </th>
                <th style="width:10%">
                    滞纳金
                </th>
                <th style="width:10%">
                    服务费
                </th>
                <th style="width:10%">
                    处理说明
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var m in Model.OrderToLllegalDealtDetails)
            {
                <tr>
                    <td>@m.BookNo</td>
                    <td>@m.LllegalCity</td>
                    <td>@m.Address</td>
                    <td>@m.LllegalTime</td>
                    <td>@m.Point</td>
                    <td>@m.Fine</td>
                    <td>@m.Late_fees</td>
                    <td>@m.ServiceFee</td>
                    <td>@m.Content</td>
                </tr>
            }



        </tbody>
    </table>


    <div class="gbr-row-title clearfix">
        <div class="pull-left">
            <h5>流程跟踪</h5>
        </div>
        <div class="pull-right f-tb1-item-pull-right">
            <h6></h6>
        </div>
    </div>

    <ul>
        @if (Model.BizProcessesAuditDetails != null)
        {
            foreach (var auditDetail in Model.BizProcessesAuditDetails)
            {
                <li style="line-height:18px;"><span>@auditDetail.CreateTime.ToUnifiedFormatDateTime()</span><span style="margin-left:10px;">@auditDetail.Description</span></li>
            }
        }
    </ul>
</form>